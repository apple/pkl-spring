amends "package://pkg.pkl-lang.org/pkl-project-commons/pkl.impl.circleci@1.1.1#/PklCI.pkl"

jobs {
  default {
    docker {
      new { image = "cimg/openjdk:17.0" }
    }
  }
  ["build"] {
    steps {
      "checkout"
      new RunStep {
        name = "Building"
        command = "./gradlew build"
      }
    }
  }
  ["deploy-release"] {
    steps {
      "checkout"
      new RunStep {
        command = """
          ./gradlew -DreleaseBuild=true publishToSonatype closeAndReleaseSonatypeStagingRepository
          """
      }
    }
  }
  ["deploy-snapshot"] {
    steps {
      "checkout"
      new RunStep {
        command = "./gradlew build publishToSonatype"
      }
    }
  }
  ["github-release"] {
    docker = new {
      new { image = "maniator/gh:v2.40.1" }
    }
    steps {
      new RunStep {
        command = #"""
          gh release create "${CIRCLE_TAG}" \
            --title "${CIRCLE_TAG}" \
            --target "${CIRCLE_SHA1}" \
            --verify-tag \
            --notes "Release notes: https://pkl-lang.org/spring/current/changelog.html#release-${CIRCLE_TAG}" \
            --repo "${CIRCLE_PROJECT_USERNAME}/${CIRCLE_PROJECT_REPONAME}"
          """#
      }
    }
  }
}

triggerDocsBuild = "release"

prb {
  jobs {
    "build"
  }
}

main {
  jobs {
    new {
      ["deploy-snapshot"] {
        context {
          "pkl-maven-release"
        }
      }
    }
  }
}

release {
  jobs {
    new {
      ["github-release"] {
        context {
          "pkl-github-release"
        }
      }
    }
    new {
      ["deploy-release"] {
        context {
          "pkl-maven-release"
        }
        requires {
          "github-release"
        }
      }
    }
  }
}
